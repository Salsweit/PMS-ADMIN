@{
    ViewBag.Title = "My Request";
}

<div class="container mt-5" style="max-width: 1295px;">
    <div class="table-responsive" style="max-height: 500px; overflow-y: auto; background-color: #F3F3F4;">
        <table class="table table-striped table-bordered" style="border-radius: 8px;">
            <thead class="table-header sticky-header" style="text-align: center;">
                <tr>
                    <th scope="col">Request ID</th>
                    <th scope="col">Item Name</th>
                    <th scope="col">Budget</th>
                    <th scope="col">Unit Price</th>
                    <th scope="col">Date Requested</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody class="table-row" style="text-align: center;">
                <tr>
                    <td>REQ001</td>
                    <td>Printer Ink</td>
                    <td>$100</td>
                    <td>$25</td>
                    <td>2024-09-01</td>
                    <td class="status-pending">Pending</td>
                </tr>
                <tr>
                    <td>REQ002</td>
                    <td>USB Drive</td>
                    <td>$50</td>
                    <td>$10</td>
                    <td>2024-09-02</td>
                    <td class="status-approved">Approved</td>
                </tr>
                <!-- Repeat other rows similarly, changing the status class accordingly -->
            </tbody>
        </table>
    </div>
</div>



<style>
    /* Custom Styles */
    .table-header {
        background-color: #4e73df; /* Softer blue for header */
        color: #f8f9fa;
    }

    .table-row {
        background-color: #F3F3F4;
    }

        .table-row:hover {
            background-color: #e0e0e0; /* Light gray on hover */
        }

    .status-pending {
        color: #ffc107; /* Yellow */
    }

    .status-approved {
        color: #28a745; /* Green */
    }

    .status-rejected {
        color: #dc3545; /* Red */
    }

    /* Custom scrollbar styling */
    .table-responsive {
        scrollbar-width: thin;
        scrollbar-color: #888 #F3F3F4;
    }

        .table-responsive::-webkit-scrollbar {
            width: 12px;
        }

        .table-responsive::-webkit-scrollbar-track {
            background: #F3F3F4;
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background-color: #888;
            border-radius: 10px;
            border: 3px solid #F3F3F4;
        }

    /* Sticky header */
    .sticky-header {
        position: sticky;
        top: 0;
        z-index: 1;
    }

    /* Larger, more friendly checkbox */
    .row-check {
        transform: scale(1.5);
        cursor: pointer;
    }

    /* Responsive font size for table text */
    .table th, .table td {
        font-size: 15.5px; /* Default size */
        padding: 8px 5px; /* Adjust padding for better centering */
        border: 1px solid #ccc; /* Border for cells */
        vertical-align: middle; /* Vertically center text */
    }
</style>