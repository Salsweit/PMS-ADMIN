@model Request.Models.UserRepository
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
@Html.AntiForgeryToken()
<section class="vh-100" style="font-family: Poppins; background-color: #F3F3F4;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10" style="max-width: 65%;">
                <div class="card" style="border-radius: 1rem; box-shadow: rgba(0, 0, 0, 0.08) 0px 4px 12px;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/Content/Images/logoNCAS.png" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 100%; object-fit:contain;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <div class="d-flex align-items-center mb-3 pb-1" style="justify-content: center;">
                                    <img src="~/Content/Images/Rectangle-Powered-By.png" />
                                </div>

                                @* Display validation summary for errors *@
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div data-mdb-input-init class="form-outline mb-4">
                                    @Html.Label("Username", new { @class = "form-label" })
                                    @Html.TextBox("username", null, new { @class = "form-control form-control-lg" })
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4 position-relative">
                                    @Html.Label("Password", new { @class = "form-label" })
                                    @Html.Password("password", null, new { @class = "form-control form-control-lg", @id = "password" })
                                    <i class="bi bi-eye-slash float-end text-muted eye-icon" style="cursor: pointer; position: absolute; top: 44px; right: 10px;"></i>
                                    <a style="margin-top: 3px; font-size: 13px;" class="small text-muted" href="@Url.Action("ForgotPassword", "Account")">Forgot password?</a>
                                </div>

                                <div class="pt-1 mb-4">
                                    <button class="btn btn-primary btn-lg" type="submit" style="width: 100%;">Login</button>
                                </div>

                                <p class="mb-5 pb-lg-2" style="color: #828282; text-align:center; font-size: 13px;">Don't have an account? <a href="@Url.Action("Register", "Account")" style="color: #0a80ff;">Register here</a></p>
                                <div style="display: flex; justify-content: center; gap: 10px; font-size: 14px;">
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<script>
    const togglePassword = document.querySelector('.eye-icon');
    const passwordInput = document.querySelector('#password');

    togglePassword.addEventListener('click', function () {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        this.classList.toggle('bi-eye');
    });
</script>




